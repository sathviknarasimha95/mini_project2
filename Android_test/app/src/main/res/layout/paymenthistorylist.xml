<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/payment_image"
            android:src="@raw/ord"
            android:layout_centerVertical="true"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="20sp"
            android:layout_alignTop="@+id/payment_image"
            android:layout_toRightOf="@+id/payment_image"
            android:layout_toEndOf="@+id/payment_image"
            android:id="@+id/cname" />

        <TextView
            android:id="@+id/paymenthistory_getDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cname"
            android:layout_alignBottom="@+id/cname"
            android:layout_toEndOf="@+id/cname"
            android:layout_toRightOf="@+id/cname"
            android:padding="5dp"
            android:text="hii"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paymenthistory_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="hii"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cname"
            android:layout_toLeftOf="@+id/paymenthistory_getDate"
            android:layout_toStartOf="@+id/paymenthistory_getDate"
            android:text="Price:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/paymenthistory_orderprice"
            android:text="OrderId:"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paymenthistory_orderprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cname"
            android:layout_toEndOf="@+id/cname"
            android:layout_toRightOf="@+id/cname"
            android:text="hii" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/payment_image"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:text="Status:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/paymenthistory_orderstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paymenthistory_orderid"
            android:layout_toEndOf="@+id/textView11"
            android:layout_toRightOf="@+id/textView11"
            android:text="status"
            android:textStyle="bold"/>







    </RelativeLayout>
</android.support.v7.widget.CardView>