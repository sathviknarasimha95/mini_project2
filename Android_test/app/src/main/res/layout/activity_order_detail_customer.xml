<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sathvik.android_test.ui.OrderDetailCustomer">

    <ListView
        android:id="@+id/get_order_detail_customer"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:dividerHeight="3dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="3dp">


    </ListView>
    <TextView
        android:id="@+id/total_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="35dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/get_order_detail_customer"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/total_det"
        android:layout_marginTop="20dp"
        android:id="@+id/admin_buttons">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"

            android:text="Accept Order"
            android:textAllCaps="false"
            android:theme="@style/AppTheme.Button"
            android:textColor="#fff"
            android:textSize="18sp"
            android:id="@+id/accept_order"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"

            android:text="Cancel Order"
            android:theme="@style/AppTheme.Button"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:id="@+id/cancel_order"
            android:layout_below="@+id/accept_order"
            />


    </RelativeLayout>

</RelativeLayout>
