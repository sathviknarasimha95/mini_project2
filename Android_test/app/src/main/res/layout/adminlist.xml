<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/admin_layout_image"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@raw/bitmap" />

    <TextView
        android:id="@+id/admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/admin_layout_image"
        android:layout_toEndOf="@+id/admin_layout_image"
        android:layout_toRightOf="@+id/admin_layout_image"
        android:text="Name:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_title"
        android:layout_toEndOf="@+id/admin_layout_image"
        android:layout_toRightOf="@+id/admin_layout_image"
        android:text="Date:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/admin_layout_image"
        android:layout_toRightOf="@+id/admin_layout_image"
        android:text="OrderId" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/admin_layout_image"
        android:layout_toRightOf="@+id/admin_layout_image"
        android:text="Price:" />

    <TextView
        android:id="@+id/admin_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/admin_title"
        android:layout_toEndOf="@+id/admin_title"
        android:layout_toRightOf="@+id/admin_title"
        android:text="Name"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/admin_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_toEndOf="@+id/admin_order_name"
        android:layout_toRightOf="@+id/admin_order_name"
        android:text="Status"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/admin_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:text="date" />

    <TextView
        android:id="@+id/admin_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_order_date"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:text="TextView" />

    <TextView
        android:id="@+id/admin_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:text="price" />
</RelativeLayout>