<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/order_image"
        android:src="@raw/bitmap"
        android:layout_centerVertical="true"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        android:layout_alignTop="@+id/order_image"
        android:layout_toRightOf="@+id/order_image"
        android:layout_toEndOf="@+id/order_image"
        android:id="@+id/textView" />
    <TextView
        android:id="@+id/list_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="item"
        android:textSize="20sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="Type:"
        android:layout_below="@+id/list_order"
        android:layout_toRightOf="@+id/order_image"
        android:layout_toEndOf="@+id/order_image"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company:"
        android:textSize="10sp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/order_image"
        android:layout_toEndOf="@+id/order_image"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/order_image"
        android:layout_toEndOf="@+id/order_image"
        android:id="@+id/textView4" />
    <TextView
        android:id="@+id/order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tab"
        android:textSize="10sp"
        android:padding="5dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />
    <TextView
        android:id="@+id/order_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sun Pharamacy"
        android:textSize="10sp"
        android:padding="5dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50rs"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <com.github.rubensousa.raiflatbutton.RaiflatButton
        android:id="@+id/addtocart"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_order"
        android:text="Add to Cart"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
</android.support.v7.widget.CardView>